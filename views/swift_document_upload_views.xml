<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- LIST VIEW -->
    <record id="swift_document_upload_list_view" model="ir.ui.view">
        <field name="name">swift.document.upload.list</field>
        <field name="model">amanat.swift_document_upload</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list editable="top" multi_edit="1">
                <button width="30" title="Перейти в форму" type="object" name="open_form" icon="fa-external-link"/>
                <field name="swift_file_name"/>
                <field name="manager_id"/>
                <field name="currency"/>
                <field name="amount"/>
                <field name="payer_subagent"/>
                <field name="payment_date"/>
                <field name="swift_code"/>
                <field name="application_sequence"/>
                <field name="zayavka_id" readonly="1"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="swift_document_upload_form_view" model="ir.ui.view">
        <field name="name">swift.document.upload.form</field>
        <field name="model">amanat.swift_document_upload</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="SWIFT Документы">
                <header>
                    <button name="action_reprocess_document" type="object" string="Переобработать" class="btn-primary"/>
                    <button name="action_test_strict_matching" type="object" string="Тест строгого поиска" class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <group string="Основная информация">
                            <field name="swift_file" filename="swift_file_name"/>
                            <field name="swift_file_name" invisible="1"/>
                            <field name="manager_id"/>
                            <field name="currency"/>
                            <field name="amount"/>
                            <field name="payer_subagent"/>
                        </group>
                        <group string="Дополнительная информация">
                            <field name="payment_date"/>
                            <field name="swift_code"/>
                            <field name="application_sequence"/>
                            <field name="zayavka_id" readonly="1"/>
                            <field name="processing_status"/>
                            <field name="processing_notes"/>
                            <field name="create_date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- ACTION -->
    <record id="action_swift_document_upload" model="ir.actions.act_window">
        <field name="name">SWIFT Документы</field>
        <field name="res_model">amanat.swift_document_upload</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Создайте первый SWIFT документ!
            </p>
            <p>
                Здесь вы можете загружать SWIFT документы и автоматически привязывать их к заявкам по плательщику субагента.
            </p>
        </field>
    </record>

    <!-- MENU ITEM -->
    <menuitem 
        id="menu_swift_document_upload"
        name="SWIFT Документы"
        parent="amanat_menu_main_group"
        action="action_swift_document_upload"
        sequence="45"/>

</odoo>
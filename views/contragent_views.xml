    <record id="contragent_form_view" model="ir.ui.view">
        <field name="name">contragent.form</field>
        <field name="model">amanat.contragent</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <h1><field name="name"/></h1>
                </header>
                <sheet>
                    <notebook>
                        <page string="Основные">
                            <header>
                                <h2>Основаная информация о контрагенте</h2>
                            </header>
                            <group>
                                <field name="payer_ids"/>
                                <field name="payer_inn"/>
                            </group>
                            <group string="Актуальный договор">
                                <field name="actual_contract_id"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                        </page>
                        
                        <page string="Договоры">
                            <header>
                                <h2>Управление договорами с контрагентом</h2>
                            </header>
                            <field name="contract_ids">
                                <list editable="bottom">
                                    <button width="30" title="Открыть договор" type="object" name="open_form" icon="fa-edit"/>
                                    <button width="30" title="Открыть договор в новой вкладке" type="object" name="open_form_new_tab" icon="fa-external-link"/>
                                    <field name="name" width="300"/>
                                    <field name="start_date" width="150"/>
                                    <field name="end_date" width="150"/>
                                    <field name="is_actual" widget="boolean_toggle" width="100"/>
                                    <field name="auto_prolongation" widget="boolean_toggle" width="150"/>
                                    <field name="contract_attachments" widget="amanat_attachment" 
                                           options="{'accepted_file_extensions': 'image/*,application/pdf,.doc,.docx,.xls,.xlsx,.txt'}" 
                                           width="200"/>
                                </list>
                                <form>
                                    <header>
                                        <field name="is_actual" widget="boolean_button" options="{'terminology': 'active'}" 
                                               string="Актуальный" class="btn-success"/>
                                    </header>
                                    <sheet>
                                        <group>
                                            <field name="name"/>
                                        </group>
                                        
                                        <group string="Даты действия договора">
                                            <div class="o-form-group-2">
                                                <group>
                                                    <field name="start_date"/>
                                                </group>
                                                <group>
                                                    <field name="end_date"/>
                                                </group>
                                            </div>
                                            <field name="auto_prolongation"/>
                                        </group>
                                        
                                        <group string="Файлы договора">
                                            <field name="contract_attachments" widget="amanat_attachment"
                                                   options="{'accepted_file_extensions': 'image/*,application/pdf,.doc,.docx,.xls,.xlsx,.txt'}"/>
                                        </group>
                                        
                                        <group string="Дополнительная информация">
                                            <field name="description"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        
                    </notebook>
                </sheet>
                <!-- Виджет трекинга -->
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <!-- Search View для фильтрации и поиска -->
    <record id="contragent_search_view" model="ir.ui.view">
        <field name="name">contragent.search</field>
        <field name="model">amanat.contragent</field>
        <field name="arch" type="xml">
            <search>
                <!-- Поля поиска -->
                <field name="name" string="Наименование контрагента" filter_domain="[('name','ilike',self)]"/>
                <field name="payer_ids" string="Плательщики" filter_domain="[('payer_ids.name','ilike',self)]"/>
                <field name="payer_inn" string="ИНН плательщиков" filter_domain="[('payer_inn','ilike',self)]"/>
                <field name="inn" string="ИНН контрагента" filter_domain="[('inn','ilike',self)]"/>
                
                <!-- Фильтры -->
                <filter name="has_payers" string="С плательщиками" domain="[('payer_ids', '!=', False)]"/>
                <filter name="no_payers" string="Без плательщиков" domain="[('payer_ids', '=', False)]"/>
                
                <!-- Группировка -->
                <group expand="0" string="Группировать по">
                    <filter name="group_by_payer" string="По плательщикам" context="{'group_by': 'payer_ids'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="contragent_action" model="ir.actions.act_window">
        <field name="name">Контрагенты</field>
        <field name="res_model">amanat.contragent</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="contragent_search_view"/>
        <field name="target">main</field>
    </record>
</odoo>

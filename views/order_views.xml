<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="order_list_view" model="ir.ui.view">
        <field name="name">order.list</field>
        <field name="model">amanat.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="type"/>
                <field width="200px" name="partner_1_id"/>
                <field width="200px" name="payer_1_id"/>
                <field name="wallet_1_id"/>
                <field width="200px" name="partner_2_id"/>
                <field width="200px" name="payer_2_id"/>
                <field name="wallet_2_id"/>
                <field name="currency"/>
                <field name="amount"/>
                <field name="rate"/>
                <field width="200px" name="operation_percent"/>
                <field name="rko"/>
                <field name="amount_1"/>
                <field width="200px" name="our_percent"/>
                <field name="rko_2"/>
                <field name="amount_2"/>
                <field name="total"/>
                <field width="200px" name="comment"/>
                <field width="200px" name="is_confirmed"/>
                <field name="status"/>
                <field name="money"/>
                <field width="200px" name="reserve_1"/>
                <field width="200px" name="converted_amount"/>
                <field name="investment"/>
                <field name="gold"/>
                <field width="200px" name="cross_from"/>
                <field width="200px" name="cross_rate"/>
                <field width="200px" name="cross_currency_from"/>
                <field width="200px" name="cross_currency_to"/>
                <field width="200px" name="cross_calc"/>
                <field width="200px" name="cross_converted"/>
                <field name="partner_gold"/>
                <field name="write_off"/>
                <field width="200px" name="rollup_write_off"/>
                <field name="reconciliation"/>
                <field width="200px" name="remaining_debt"/>
            </list>
        </field>
    </record>

    <record id="order_action" model="ir.actions.act_window">
        <field name="name">Ордер</field>
        <field name="res_model">amanat.order</field>
        <field name="view_mode">list</field>
    </record>
</odoo>



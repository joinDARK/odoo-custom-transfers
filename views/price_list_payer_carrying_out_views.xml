<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_price_list_payer_carrying_out_list" model="ir.ui.view">
        <field name="name">price_list_payer_carrying_out.list</field>
        <field name="model">amanat.price_list_payer_carrying_out</field>
        <field name="arch" type="xml">
            <list editable="top" multi_edit="1">
                <button width="30" title="Перейти в форму" type="object" name="open_form" icon="fa-external-link"/>
                <field width="200" name="name"/>
                <field width="200" name="payer_partners" widget="many2many_tags"/>
                <field width="200" name="contragent_ids" widget="many2many_tags"/>
                <field width="200" name="date_start"/>
                <field width="200" name="date_end"/>
                <field width="200" name="today_date"/>
                <field width="200" name="period_days"/>
                <field width="200" name="accrual_percentage" widget="percentage"/>
                <field width="200" name="fixed_deal_fee"/>
                <field width="200" name="min_application_amount"/>
                <field width="200" name="max_application_amount"/>
                <field width="200" name="min_percent_accrual" widget="percentage"/>
                <field width="200" name="max_percent_accrual" widget="percentage"/>
                <field width="200" name="contragent_zayavka_id"/>
                <field width="200" name="agent_zayavka_id"/>
                <field width="200" name="client_zayavka_id"/>
                <field width="200" name="currency_zayavka"/>
                <field width="200" name="bind_field"/>
                <field width="200" name="zayavka_ids"/>
            </list>
        </field>
    </record>

    <record id="view_price_list_payer_carrying_out_search" model="ir.ui.view">
        <field name="name">price_list_payer_carrying_out.search</field>
        <field name="model">amanat.price_list_payer_carrying_out</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Наименование"/>
                <field name="payer_partners" string="Плательщики субагенты"/>
                <field name="contragent_ids" string="Субагенты"/>
                <field name="contragent_zayavka_id" string="Контрагент заявки"/>
                <field name="agent_zayavka_id" string="Агент заявки"/>
                <field name="client_zayavka_id" string="Клиент заявки"/>
                <field name="currency_zayavka" string="Валюта заявки"/>
                
                <separator/>
                
                <filter name="active_period" string="Активный период" 
                        domain="[('date_start', '&lt;=', context_today()), ('date_end', '&gt;=', context_today())]"/>
                <filter name="future_period" string="Будущий период" 
                        domain="[('date_start', '&gt;', context_today())]"/>
                <filter name="past_period" string="Прошедший период" 
                        domain="[('date_end', '&lt;', context_today())]"/>
                
                <separator/>
                
                <filter name="with_fixed_fee" string="С фиксированной комиссией" 
                        domain="[('fixed_deal_fee', '&gt;', 0)]"/>
                <filter name="with_percentage" string="С процентной комиссией" 
                        domain="[('accrual_percentage', '&gt;', 0)]"/>
                
                <separator/>
                
                <group expand="0" string="Группировка">
                    <filter name="group_by_payer" string="По плательщикам" context="{'group_by': 'payer_partners'}"/>
                    <filter name="group_by_currency" string="По валюте" context="{'group_by': 'currency_zayavka'}"/>
                    <filter name="group_by_period" string="По периоду" context="{'group_by': 'date_start'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_price_list_payer_carrying_out_form" model="ir.ui.view">
        <field name="name">price_list_payer_carrying_out.form</field>
        <field name="model">amanat.price_list_payer_carrying_out</field>
        <field name="arch" type="xml">
            <form string="Прайс лист: Плательщик-Исполнение">
                <header>
                    <h1><field name="name"/></h1>
                </header>
                <!-- <sheet>
                    <group>
                        <field name="name"/>
                        <field name="payer_partners"/>
                        <field name="contragent_ids" widget="many2many_tags"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="today_date"/>
                        <field name="period_days"/>
                        <field name="accrual_percentage" widget="percentage"/>
                        <field name="fixed_deal_fee"/>
                        <field name="min_application_amount"/>
                        <field name="max_application_amount"/>
                        <field name="bind_field"/>
                        <field name="zayavka_ids"/>
                    </group>
                </sheet> -->

                <sheet>
                    <group>
                        <div class="o-form-group-2">
                            <group>
                                <field name="payer_partners" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="contragent_ids" widget="many2many_tags"/>
                            </group>
                        </div>
                    </group>
                    <group>
                        <div class="o-form-group-2">
                            <group>
                                <field name="date_start"/>
                                <field name="accrual_percentage" widget="percentage"/>
                                <field name="min_application_amount"/>
                            </group>
                            <group>
                                <field name="date_end"/>
                                <field name="fixed_deal_fee"/>
                                <field name="max_application_amount" />
                            </group>
                        </div>
                        <!-- <field name="accrual_type"/> -->
                        <!-- <field name="today_date"/>
                        <field name="period_days"/> -->
                        <!-- <field name="currency_type"/>
                        <field name="type_binding"/> -->
                        <!-- <field name="bind_field"/> -->
                        <!-- <field name="zayavka_ids_2"/>
                        <field name="zayavka_ids_3"/>
                        <field name="zayavka_ids_4"/>
                        <field name="zayavka_ids_5"/> -->
                    </group>
                    <group>
                        <div class="o-form-group-2">
                            <group>
                                <field name="min_percent_accrual" widget="percentage"/>
                                <field name="contragent_zayavka_id"/>
                                <field name="agent_zayavka_id"/>
                            </group>
                            <group>
                                <field name="max_percent_accrual" widget="percentage"/>
                                <field name="client_zayavka_id"/>
                                <field name="currency_zayavka"/>
                            </group>
                        </div>
                    </group>
                    <group>
                        <field name="zayavka_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="price_list_payer_carrying_out_action" model="ir.actions.act_window">
        <field name="name">Прайс лист Плательщика За проведение</field>
        <field name="res_model">amanat.price_list_payer_carrying_out</field>
        <field name="view_mode">list,form</field>
        <field name="target">main</field>
        <field name="search_view_id" ref="view_price_list_payer_carrying_out_search"/>
    </record>

    <!-- Отдельное действие для "Фикс заявка" с дашбордом -->
    <record id="zayavka_fiks_dashboard_action_menu" model="ir.actions.client">
        <field name="name">Фикс заявка</field>
        <field name="tag">zayavka_fiks_dashboard_action</field>
        <field name="target">main</field>
    </record>
</odoo>

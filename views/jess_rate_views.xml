<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="jess_rate_list_view" model="ir.ui.view">
        <field name="name">jess.rate.list</field>
        <field name="model">amanat.jess_rate</field>
        <field name="arch" type="xml">
            <list editable="top" multi_edit="1">
                <button width="30" title="Перейти в форму" type="object" name="open_form" icon="fa-external-link"/>
                <field name="name"/>
                <field name="date"/>
                <field name="currency"/>
                <field name="rate"/>
            </list>
        </field>
    </record>

    <record id="jess_rate_form_view" model="ir.ui.view">
        <field name="name">jess.rate.form</field>
        <field name="model">amanat.jess_rate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <h1><field name="name"/></h1>
                    </header>
                    <group>
                        <field name="date"/>
                        <field name="currency"/>
                        <field name="rate"/>
                    </group>
                </sheet>
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <record id="jess_rate_action" model="ir.actions.act_window">
        <field name="name">Курс Джесс</field>
        <field name="res_model">amanat.jess_rate</field>
        <field name="view_mode">list,form</field>
        <field name="target">main</field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== FORM VIEW ==================== -->
    <record id="view_amanat_dashboard_form" model="ir.ui.view">
        <field name="name">amanat.dashboard.form</field>
        <field name="model">amanat.dashboard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Статистика переводов">
                            <group>
                                <group>
                                    <field name="total_transfers"/>
                                    <field name="active_transfers"/>
                                    <field name="closed_transfers"/>
                                </group>
                                <group>
                                    <field name="total_transfer_amount"/>
                                </group>
                            </group>
                        </page>
                        <page string="Статистика ордеров">
                            <group>
                                <group>
                                    <field name="total_orders"/>
                                    <field name="draft_orders"/>
                                </group>
                                <group>
                                    <field name="confirmed_orders"/>
                                    <field name="done_orders"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- ==================== LIST VIEW ==================== -->
    <record id="view_amanat_dashboard_list" model="ir.ui.view">
        <field name="name">amanat.dashboard.list</field>
        <field name="model">amanat.dashboard</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="total_transfers"/>
                <field name="active_transfers"/>
                <field name="closed_transfers"/>
                <field name="total_orders"/>
            </list>
        </field>
    </record>
    
    <!-- ==================== SEARCH VIEW ==================== -->
    <record id="view_amanat_dashboard_search" model="ir.ui.view">
        <field name="name">amanat.dashboard.search</field>
        <field name="model">amanat.dashboard</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>
    
    <!-- ==================== ACTIONS ==================== -->
    <!-- JavaScript Dashboard Action -->
    <record id="action_amanat_dashboard_js" model="ir.actions.client">
        <field name="name">Основной дашборд</field>
        <field name="tag">amanat_dashboard</field>
    </record>
    
    <!-- Standard Window Action для List/Form -->
    <record id="action_amanat_dashboard" model="ir.actions.act_window">
        <field name="name">Управление дашбордами</field>
        <field name="res_model">amanat.dashboard</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo> 
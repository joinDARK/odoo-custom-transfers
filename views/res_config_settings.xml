<?xml version="1.0" encoding="UTF-8"?>

<odoo>

	<record id="view_res_config_settings_form" model="ir.ui.view">
	    <field name="name">res.config.settings.form</field>
	    <field name="model">res.config.settings</field>
	    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
	    <field name="arch" type="xml">
        <xpath expr="//setting[@id='inter_company']" position="before">
            <setting string="AppsBar" company_dependent="1" help="Set your own Logo for the appsbar">
                <div class="w-50 row">
                        <field name="appbar_image" widget="image" class="oe_avatar"/>
                    </div>
                </setting>
        </xpath>

        <xpath expr="//block[@name='integration']" position="inside">
            <setting id="ygpt_settings" string="YandexGPT" help="Настройки интеграции с YandexGPT">
				<div class="row w-100">
					<div class="col-12 mt16">
						<label for="ygpt_api_key" class="o_light_label"/>
						<field name="ygpt_api_key" password="True" placeholder="IAM Token" class="o_light_label"/>
					</div>
					<div class="col-12 mt16">
						<label for="ygpt_folder_id" class="o_light_label"/>
						<field name="ygpt_folder_id" placeholder="Folder ID" class="o_light_label"/>
					</div>
					<div class="col-12 mt16">
						<label for="ygpt_prompt_for_zayavka_analyse" class="o_light_label"/>
						<field name="ygpt_prompt_for_zayavka_analyse" placeholder="Базовый системный промпт для анализа заявки" nolabel="1" widget="text" class="w-100"/>
					</div>
					<div class="col-12 mt16">
						<label for="ygpt_prompt_for_sber_screen_analyse" class="o_light_label"/>
						<field name="ygpt_prompt_for_sber_screen_analyse" placeholder="Базовый системный промпт для анализа сбербанка" nolabel="1" widget="text" class="w-100"/>
					</div>
					<div class="col-12 mt16">
						<label for="ygpt_prompt_for_assignment_analyse" class="o_light_label"/>
						<field name="ygpt_prompt_for_assignment_analyse" placeholder="Базовый системный промпт для анализа поручения" nolabel="1" widget="text" class="w-100"/>
					</div>
					<div class="col-12 mt16">
						<label for="ypgt_prompt_for_assignment_client_analyse" class="o_light_label"/>
						<field name="ypgt_prompt_for_assignment_client_analyse" placeholder="Базовый системный промпт для анализа поручения клиента (индивидуала)" nolabel="1" widget="text" class="w-100"/>
					</div>
                </div>
            </setting>
        </xpath>
	    </field>
	</record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List (tree) view -->
    <record id="price_list_payer_profit_list_view" model="ir.ui.view">
        <field name="name">price.list.payer.profit.list</field>
        <field name="model">amanat.price_list_payer_profit</field>
        <field name="arch" type="xml">
            <list editable="top" multi_edit="1">
                <button width="30" title="Перейти в форму" type="object" name="open_form" icon="fa-external-link"/>
                <field width="200" name="name"/>
                <field width="200" name="date_start"/>
                <field width="200" name="date_end"/>
                <field width="200" name="period_days"/>
                <field width="200" name="percent_accrual" widget="percentage"/>
                <field width="200" name="fixed_fee"/>
                <field width="200" name="min_zayavka_amount"/>
                <field width="200" name="max_zayavka_amount"/>
                <field width="200" name="is_bound"/>
                <field width="200" name="min_percent_accrual" widget="percentage"/>
                <field width="200" name="max_percent_accrual" widget="percentage"/>
                <field width="200" name="contragent_zayavka_id"/>
                <field width="200" name="agent_zayavka_id"/>
                <field width="200" name="client_zayavka_id"/>
                <field width="200" name="currency_zayavka"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="price_list_payer_profit_form_view" model="ir.ui.view">
        <field name="name">price.list.payer.profit.form</field>
        <field name="model">amanat.price_list_payer_profit</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <h1><field name="name"/></h1>
                </header>
                <sheet>
                    <group>
                        <div class="o-form-group-3">
                            <group>
                                <field name="payer_subagent_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="subagent_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="contragent_ids" widget="many2many_tags"/>
                            </group>
                        </div>
                    </group>
                    <group>
                        <div class="o-form-group-2">
                            <group>
                                <field name="date_start"/>
                                <field name="percent_accrual" widget="percentage"/>
                                <field name="min_zayavka_amount"/>
                                <field name="min_percent_accrual" widget="percentage"/>
                                <field name="contragent_zayavka_id"/>
                                <field name="agent_zayavka_id"/>
                            </group>
                            <group>  
                                <field name="date_end"/>
                                <field name="fixed_fee"/>
                                <field name="max_zayavka_amount"/>
                                <field name="max_percent_accrual" widget="percentage"/>
                                <field name="client_zayavka_id"/>
                                <field name="currency_zayavka"/>
                            </group>
                        </div>
                    </group>
                    <!-- <group>
                        <field name="period_days" readonly="1"/>
                        <field name="today_date_str" readonly="1"/>
                    </group> -->
                    <!-- <group>
                        <field name="is_bound"/>
                    </group> -->
                    <group>
                        <field name="zayavka_ids"/>
                    </group>
                </sheet>
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="price_list_payer_profit_search_view" model="ir.ui.view">
        <field name="name">price.list.payer.profit.search</field>
        <field name="model">amanat.price_list_payer_profit</field>
        <field name="arch" type="xml">
            <search string="Поиск прайс-листов плательщика прибыль">
                <field name="name" string="Наименование"/>
                <field name="payer_subagent_ids" string="Плательщики субагента"/>
                <field name="subagent_ids" string="Субагент"/>
                <field name="contragent_ids" string="Контрагенты"/>
                <field name="date_start" string="Дата начало"/>
                <field name="date_end" string="Дата конец"/>
                <field name="percent_accrual" string="% Начисления"/>
                <field name="fixed_fee" string="Фикс за сделку $"/>
                <field name="contragent_zayavka_id" string="Контрагент заявки"/>
                <field name="agent_zayavka_id" string="Агент заявки"/>
                <field name="client_zayavka_id" string="Клиент заявки"/>
                <field name="currency_zayavka" string="Валюта заявки"/>
                
                <!-- Фильтры -->
                <filter name="filter_active" string="Активные" 
                        domain="['|', ('date_end', '=', False), ('date_end', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_expired" string="Истекшие" 
                        domain="[('date_end', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                
                <!-- Группировка -->
                <group expand="0" string="Группировать по">
                    <filter name="group_by_subagent" string="Субагент" context="{'group_by': 'subagent_ids'}"/>
                    <filter name="group_by_payer" string="Плательщики субагента" context="{'group_by': 'payer_subagent_ids'}"/>
                    <filter name="group_by_contragent" string="Контрагенты" context="{'group_by': 'contragent_ids'}"/>
                    <filter name="group_by_currency" string="Валюта заявки" context="{'group_by': 'currency_zayavka'}"/>
                    <filter name="group_by_date_start" string="Дата начало" context="{'group_by': 'date_start'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="price_list_payer_profit_action" model="ir.actions.act_window">
        <field name="name">Прайс лист Плательщика Прибыль</field>
        <field name="res_model">amanat.price_list_payer_profit</field>
        <field name="view_mode">list,form</field>
        <field name="target">main</field>
    </record>
</odoo>
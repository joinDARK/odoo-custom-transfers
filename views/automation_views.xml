<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="automation_list_view" model="ir.ui.view">
        <field name="name">automation.list</field>
        <field name="model">amanat.automation</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="model_id"/>
                <field name="trigger"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="automation_form_view" model="ir.ui.view">
        <field name="name">automation.form</field>
        <field name="model">amanat.automation</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model_id"/>
                        <field name="trigger"/>
                        <field name="active"/>
                        <field name="condition" widget="ace" options="{'mode': 'python'}"/>
                        <field name="action" widget="ace" options="{'mode': 'python'}"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="automation_action" model="ir.actions.act_window">
        <field name="name">Автоматизации</field>
        <field name="res_model">amanat.automation</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Удалён скрипт для real-time обновлений -->
    <template id="assets_backend" name="Amanat Assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <!-- <script type="text/javascript" src="/amanat/static/src/js/real_time_interaction.js"/> -->
        </xpath>
    </template>
    
    <!-- Дополнительный шаблон для изменения внешнего вида веб-клиента (если необходимо) -->
